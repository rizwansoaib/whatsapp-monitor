{
  "name": "trackwapp",
  "productName": "TrackWapp",
  "version": "2.0.0",
  "main": "main.js",
  "homepage": "https://github.com/rizwansoaib/whatsapp-monitor",
  "author": {
    "name": "rizwansoaib",
    "email": "rizwansoaib@gmail.com"
  },
  "icon": "assets/logo.png",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --linux",
    "dist-win": "electron-builder --win",
    "build-all": "electron-builder --mac --x64 --arm64 --win --x64 --linux --x64"
  },
  "build": {
    "icon": "assets/logo.png",
    "asar": true,
    "asarUnpack": [
      "assets/logo.png",
      "assets/64.png",
      "assets/websockets.js",
      "assets/protobuf.js"
    ],
    "appId": "com.trackwapp.app",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/logo.png"
    },
    "linux": {
      "icon": "assets/logo.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/logo.ico"
    },
    "nsis": {
      "installerIcon": "assets/logo.ico",
      "installerHeaderIcon": "assets/logo.ico",
      "deleteAppDataOnUninstall": true,
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "http": "^0.0.1-security",
    "node-notifier": "^10.0.1",
    "request": "^2.88.2"
  }
}