{
  "name": "WhatsApp-Monitor",
  "version": "1.2.0",
  "main": "main.js",
  "homepage": "https://github.com/rizwansoaib/whatsapp-monitor",
  "author": {
    "name": "github.com/rizwansoaib",
    "email": "rizwansoaib@gmail.com"
  },
  "icon": "assets/logo.png",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --linux",
    "dist-win": "electron-builder --win"
  },
  "build": {
    "icon": "assests/logo.png",
    "asar": true,
    "asarUnpack": [
      "build/logo.png",
      "build/logo.ico",
      "assets/64.png",
      "assets/websockets.js",
      "assets/protobuf.js"
    ],
    "appId": "com.whatsappmonitor.v1.2",
    "linux": {
      "icon": "build/logo.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi",
        "zip"
      ],
      "icon": "build/logo.ico"
    },
    "nsis": {
      "installerIcon": "build/logo.ico",
      "installerHeaderIcon": "build/logo.ico",
      "deleteAppDataOnUninstall": true
    }
  },
  "devDependencies": {
    "electron": "11.2.0",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "node-notifier": "7.0.1"
  }
}
